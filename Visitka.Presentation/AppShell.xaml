<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Visitka.Presentation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Visitka.Presentation.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent Title="Головна" ContentTemplate="{DataTemplate local:MainPage}" Route="main"/>
    <ShellContent Title="Логін" ContentTemplate="{DataTemplate local:LoginPage}" Route="login"/>
    <ShellContent Title="Реєстрація" ContentTemplate="{DataTemplate local:RegisterPage}" Route="register"/>


</Shell>

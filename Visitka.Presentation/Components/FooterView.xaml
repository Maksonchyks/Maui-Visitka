             x:Class="Visitka.Presentation.Components.FooterView">

    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
        
        <Button Text="Головна" Command="{Binding NavigateCommand}" CommandParameter="main"/>
